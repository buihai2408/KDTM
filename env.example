# ============================================
# Personal Finance BI System - Environment Variables
# ============================================
# Copy this file to .env and update values as needed

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_pass
POSTGRES_DB=finance_db

# ============================================
# Backend (FastAPI)
# ============================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Dify Integration
DIFY_SERVICE_KEY=dify-service-key-change-this

# n8n Integration
N8N_SERVICE_KEY=n8n-service-key-change-this
N8N_WEBHOOK_URL=http://n8n:5678

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:8000

# ============================================
# Apache Superset
# ============================================
SUPERSET_SECRET_KEY=superset-secret-key-change-this
GUEST_TOKEN_SECRET=guest-secret-key-change-this

# ============================================
# n8n Automation
# ============================================
N8N_USER=admin
N8N_PASSWORD=admin

# ============================================
# Email (SMTP) - Using Mailhog for development
# ============================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
